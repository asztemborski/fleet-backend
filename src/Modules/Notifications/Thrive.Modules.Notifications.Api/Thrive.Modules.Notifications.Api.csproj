        <RootNamespace>Thrive.Modules.Notifications.Api</RootNamespace>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="..\Thrive.Modules.Notifications.Core\Thrive.Modules.Notifications.Core.csproj"/>
    </ItemGroup>

    <ItemGroup>
        <None Remove="module.notifications.json"/>
